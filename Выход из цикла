using System;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Csharp_Lite
{
    class Program
    {
        static void Main(string[] args)
        {
            string userInput;
            bool toggle = true;
            while (toggle)
            {
                userInput = Console.ReadLine();
                if(userInput == "exit")
                {
                    toggle = false;
                    Console.WriteLine("Конец цикла");
                }
            }
        }
    }
}
