using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace GameConsoles1
{
    internal class Program
    {
        static void Main()
        {
            Player player = new Player(0, "GodSpeed",22,"Паладин");
            player.ShowInfo();
        }
    }

    class Player
    {
        private int _idPlayer;
        private string _namePlayer;
        private int _agePlayer;
        private string _classPlayer;

        public Player(int idPlayer, string namePlayer, int agePlayer, string classPlayer)
        {
            _idPlayer = idPlayer;
            _namePlayer = namePlayer;
            _agePlayer = agePlayer;
            _classPlayer = classPlayer;
        }

        public Player()
        {

        }

        public void ShowInfo()
        {
            Console.WriteLine($"Уникальный номер {_idPlayer}\nИмя игрока {_namePlayer}\nВозраст игрока {_agePlayer}\nКласс игрока {_classPlayer}");
        }
    }
}
