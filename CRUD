using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace GameConsoles1
{
    internal class Program
    {

        static void Main()
        {
            string[] nameArray = { "Павлов Виктор Анатольевич", "Поисковик Поисков Иванович", "Прокофьев Кантарович" };
            string[] positions = { "Программист", "Левел Дизайнер", "Сценарист", };
            bool isWork = true;

            while (isWork)
            {
                Console.WriteLine("Меню программы: ");
                Console.WriteLine("0 - Вывести все досье\n1 - Добавить ФИО\n2 - Добивать досье\n3 - Поиск Досье\n4 - удалить досье\n 5-выход");
                string userInput = Console.ReadLine();

                switch (userInput)
                {
                    case "0":
                        DisplayDossier(ref nameArray, ref positions);
                        break;

                    case "1":
                        AddElement(ref nameArray);
                        break;

                    case "2":
                        AddElement(ref positions);
                        break;

                    case "3":
                        SearchName(nameArray);
                        break;

                    case "4":
                        DeletePosition(ref nameArray, ref positions);
                        break;
                    
                    case "5":
                        isWork = false;
                        break;
                }
            }
        }

        static void AddElement(ref string[] array)
        {
            Console.WriteLine("Введите данные");
            string addElement = Console.ReadLine();
            string[] newArray = new string[array.Length + 1];
            for (int i = 0; i < array.Length; i++)
            {
                newArray[i] = array[i];
            }
            array = newArray;
            array[array.Length - 1] = addElement;
        }

        static void SearchName(string[] nameArray)
        {
            string nameSearch = Console.ReadLine();
            for (int i = 0; i < nameArray.Length; i++)
            {
                if (nameArray[i].StartsWith(nameSearch))
                {
                    Console.WriteLine(nameArray[i]);
                }
            }

        }

        static void DisplayDossier(ref string[] nameArray, ref string[] position)
        {
            for (int i = 0; i < nameArray.Length; i++)
            {
                Console.Write($" {i + 1}-{nameArray[i]} {position[i]}");
            }
        }

        static void DeletePosition(ref string[] array, ref string[] position)
        {
            Console.WriteLine("Введите номер сотрудника для удаления досье");
            int idPosition = Convert.ToInt32(Console.ReadLine());
            string[] newArray = new string[array.Length - 1];
            string[] newPosition = new string[position.Length - 1];
            for (int i = 0; i < array.Length; i++)
            {
                if (i + 1 != idPosition)
                {
                    newArray[i] = array[i];
                    newPosition[i] = position[i];
                }
            }
            array = newArray;
            position = newPosition;
            Console.WriteLine("Удалено!");
        }
    }
}
