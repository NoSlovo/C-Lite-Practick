using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace GameConsoles1
{
    internal class Program
    {
        static void Main()
        {
            string[] fullNames = { "Павлов Виктор Анатольевич", "Поисковик Поисков Иванович", "Прокофьев Кантарович", "Прокофьев Виктор Палыч" };
            string[] positions = { "Программист", "Левел Дизайнер", "Сценарист", "Стажер" };
            bool isWork = true;

            while (isWork)
            {
                Console.WriteLine("Меню программы: ");
                Console.WriteLine("0 - Вывести все досье\n1 - Добивать досье\n2 - Поиск Досье\n3 - удалить досье\n4-выход\n\n");
                string userInput = Console.ReadLine();

                switch (userInput)
                {
                    case "0":
                        DisplayDossier(fullNames, positions);
                        break;

                    case "1":
                        AddDossier(ref fullNames, ref positions);
                        break;

                    case "2":
                        SearchName(fullNames);
                        break;

                    case "3":
                        DeleteDossier(ref fullNames, ref positions);
                        break;

                    case "4":
                        isWork = false;
                        break;
                }
            }
        }

        static void AddDossier(ref string[] array, ref string[] arrayPosition)
        {
            Console.WriteLine("Введите ФИО");
            string addElement = Console.ReadLine();
            Console.WriteLine("Введитие должность");
            string addPosition = Console.ReadLine();
            AddElement(ref array, addElement);
            AddElement(ref arrayPosition, addPosition);
        }

        static void SearchName(string[] arrayNames)
        {
            Console.WriteLine("Введите фамилию");
            string userInput = Console.ReadLine();

            foreach (string name in arrayNames)
            {
                if (name.StartsWith(userInput))
                {
                    Console.WriteLine(name);
                }
            }

        }
        static void DeleteDossier(ref string[] fullName, ref string[] positons)
        {
            Console.WriteLine("Введите номер элемента");
            int numElement = Convert.ToInt32(Console.ReadLine());
            DeletElemnt(ref fullName, numElement);
            DeletElemnt(ref positons, numElement);
        }

        static void DisplayDossier(string[] arrayNames, string[] position)
        {

            for (int i = 0; i < arrayNames.Length || i < position.Length; i++)
            {
                Console.Write($" {i + 1}-{arrayNames[i]} {position[i]} \n");
            }

        }

        static void DeletElemnt( ref string[] array, int numberElemnt)
        {
            if (numberElemnt > 0 && numberElemnt <= array.Length) {
                if (array.Length > 0) {
                    string[] newArray = new string[array.Length - 1];

                    for (int i = 0; i < newArray.Length;i++)
                    {
                        if (i + 1 == numberElemnt)
                        {
                            newArray[i] = array[i + 1];
                        }
                        else
                        {
                            newArray[i]=array[i];
                        }

                    }

                    array = newArray;
                }
            }
            else
            {
                Console.WriteLine("Такого Элемента нет");
            }
        }

        static void AddElement(ref string[] array, string addElemtn)
        {
            string[] newArray = new string[array.Length + 1];

            for (int i = 0; i < array.Length;i++)
            {
                newArray[i] = array[i];
            }

            array =  newArray;
            array[array.Length - 1] = addElemtn;
        }
    }      
}
