using System;
using System.Collections.Generic;
using System.Linq;

namespace CharpLite1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Detective detective = new Detective();
            detective.AddCriminals();
            detective.SearchCriminals();
        }
    }

    class Detective
    {
        private List<Criminal> _criminals = new List<Criminal>();

        public void SearchCriminals()
        {
            Console.WriteLine("Введите данные приступника");
            Console.WriteLine("Рост");
            string userInputOne = Console.ReadLine();
            int.TryParse(userInputOne, out int userNumber);
            Console.WriteLine("Вес");
            string userInputTwo = Console.ReadLine();
            int.TryParse(userInputTwo, out int userNumberTwo);
            Console.WriteLine("Национальность");
            string userInputFree = Console.ReadLine();

            var searchCriminal = from Criminal criminal in _criminals where criminal.Growth == userNumber && criminal.Weight == userNumberTwo && criminal.Bersion == false select criminal;  

            foreach ( Criminal criminal in searchCriminal)
            {
                criminal.DisplayInfo();
            }
        }

        public void AddCriminals()
        {
            _criminals.Add(new Criminal("Прокофье Виктор Анатольивич", 160, 82, true, "Азиат"));
            _criminals.Add(new Criminal("Виктор Палыч Рогозин", 173, 74, false, "Европеец"));
            _criminals.Add(new Criminal("Анатолий Басерман Саныч", 182, 99, false, "Швед"));
            _criminals.Add(new Criminal("Барыга Барыговнич Барыгин", 182, 99, true, "Швед"));
            _criminals.Add(new Criminal("Павлухин Виталий Анатольивич", 182, 99, false, "Швед"));
        }
    }

    class Criminal 
    {
        private string _fullName;
        private int _growth;
        private bool _berison;
        private string _nationality;
        private int _weight;

        public bool Bersion
        {
            get 
            { 
                return _berison; 
            }
            private set
            {
                _berison = value;
            }
        }

        public int Growth 
        {
            get
            {
                return _growth;
            }
            private set
            {
                _growth = value;  
            }
        }

        public string Nationality
        {
            get
            {
                return _nationality;
            }
            private set
            {
                _nationality = value;
            }
        }

        public int Weight
        {
            get
            {
                return _weight;
            }
            private set
            {
                _weight = value;
            }
        }


        public Criminal(string fullName,int growth, int weight, bool bersion, string nationality)
        {
            _fullName = fullName;
            _growth = growth;
            _weight = weight;
            _berison = bersion;
            _nationality = nationality;
        }

        public void DisplayInfo()
        {
            Console.WriteLine($"ФИО:{_fullName} Рост: {Growth},Нахождение в месте заключения - {Bersion}, Национальность:{_nationality}");
        }
    }
}
