using System;
using System.Collections.Generic;
using System.Linq;

namespace CharpLite1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Detective detective = new Detective();
            detective.SearchCriminal();
        }
    }

    class Detective
    {
        private List<Criminal> _criminals = new List<Criminal>() {
            new Criminal("Прокофье Виктор Анатольивич",160, 82, true,"Азиат"),
            new Criminal("Виктор Палыч Рогозин",173,74,false,"Европеец"),
            new Criminal("Анатолий Басерман Саныч",182,99, false,"Швед"),
            new Criminal("Барыга Барыговнич Барыгин",182,99,true,"Швед"),
            new Criminal("Павлухин Виталий Анатольивич",182,99, false,"Швед"),
        };

        public void SearchCriminal()
        {
            Console.WriteLine("Введите данные приступника");
            Console.WriteLine("Рост");
            string userInputOne = Console.ReadLine();
            int.TryParse(userInputOne, out int userNumber);
            Console.WriteLine("Вес");
            string userInputTwo = Console.ReadLine();
            int.TryParse(userInputTwo, out int userNumberTwo);
            Console.WriteLine("Национальность");
            string userInputFree = Console.ReadLine();

            var searchCriminal = _criminals.Where(criminal => criminal.Growth == userNumber).Where(criminal => criminal.Weight == userNumberTwo).Where(criminal => criminal.Nationality == userInputFree).Where(criminal => criminal.Bersion == false);

            foreach ( Criminal item in searchCriminal)
            {
                item.DisplayInfo();
            }
        }
    }

    class Criminal 
    {
        private string _fullName;
        private int _growth;
        private bool _beprison;
        private string _nationality;
        private int _weight;
        public bool Bersion => _beprison;
        public int Growth => _growth;
        public string Nationality => _nationality;
        public int Weight => _weight;


        public Criminal(string fullName,int growth, int weight, bool bersion, string nationality)
        {
            _fullName = fullName;
            _growth = growth;
            _weight = weight;
            _beprison = bersion;
            _nationality = nationality;
        }

        public void DisplayInfo()
        {
            Console.WriteLine($"ФИО:{_fullName} Рост: {_growth},Нахождение в месте заключения - {_beprison}, Национальность:{_nationality}");
        }
    }
}
