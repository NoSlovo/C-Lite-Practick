using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;

namespace GameConsoles1
{
    class Program
    {
        static void Main(string[] args)
        {
            bool isWork = true;
            Zoo zoo = new Zoo();
            zoo.AddAviary();
            while (isWork)
            {
                Console.WriteLine("Добро пожаловать в зоопарк\nВыберете вольер");
                Console.WriteLine("1 - Медведи\n2 - Павлин\n3 - Тигр\n4 - Шемпанзе");
                string userInput = Console.ReadLine();
                if (int.TryParse(userInput, out int userNumber))
                {
                    zoo.DisplayAviaries(userNumber);
                }
            }
        }
    }

    class Zoo
    {
       private List<Aviary> _aviaries = new List<Aviary>();

       public void DisplayAviaries(int userNumber)
       {
            if (userNumber <= _aviaries.Count)
            {
                for (int i = 0; i < _aviaries.Count; i++)
                {
                    if (i == userNumber - 1)
                    {
                        _aviaries[i].DisplayInfo();
                    }
                }
            }
            else
            {
                Console.WriteLine("Такого вольера нет");
            }       
       }
        
        public void AddAviary()
        {
            _aviaries.Add(new Aviary("Бурый медведь",'М',"ррррр"));
            _aviaries.Add(new Aviary("Павлин", 'Ж', "Ай-ай"));
            _aviaries.Add(new Aviary("Тигр", 'М', "Аррр"));
            _aviaries.Add(new Aviary("Шемпанзе", 'Ж', "Уа-уа"));
        }
    }

    class Aviary 
    {
        private  int _minAnimals;
        private  int _maxAnimals;
        private  int _countAnimal;
        private  string _name;
        private  char _gender;
        private  string _vois;

        public Aviary(string name, char gender, string vois)
        {
            Random random = new Random();
            _minAnimals = 1;
            _maxAnimals = 10;
            _countAnimal = random.Next(_minAnimals,_maxAnimals);
            _name = name;
            _gender = gender;
            _vois = vois;
        }

        public void DisplayInfo()
        {
            Console.Clear();
            Console.WriteLine($"Тип - {_name}, пол - {_gender} , звуки - {_vois}");
        }
    }
}
