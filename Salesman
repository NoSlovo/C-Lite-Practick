using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace GameConsoles1
{
    internal class Program
    {
        static void Main()
        {
            bool isWork = true;
            List<Product> products = new List<Product>();
            Player player = new Player();
            Salesman salesman = new Salesman(products);
            salesman.AddProducts();
            Deal deal = new Deal();

            while (isWork)
            {
                salesman.DisplayProducts();
                Console.WriteLine();
                player.WithdrawPurchases();
                deal.Sell(player, salesman);
            }
        }
    }

    class Product
    {
        private int _id;
        private static int _ids;
        private string _name;
        private int _prise;
        public int Id => _id;
        public int Prise => _prise;

        public Product(string name, int prise)
        {
            _id = _ids++;
            _name = name;
            _prise = prise;
        }

        public void DisplayProduct()
        {
            Console.WriteLine($"{_id} - {_name} - {_prise}");
        }
    }

    class Deal
    {
       public static int Money = 600;
       public static int CashRegister = 0;

       public void Sell (Player player, Salesman salesman)
       {
           Product product = salesman.GiveProduct();

           if (product != null && Money >= product.Prise)
            {
                Money -= product.Prise;
                CashRegister += product.Prise;
                player.BuyProduct(product);
                salesman.Remov(product);
                Console.Clear();
            }
            else
            {
                Console.Clear();
                Console.WriteLine("Что-то пошло не так");
            }
       }
    }




    class Salesman : Deal
    {
        private List<Product> _products = new List<Product>();

        public Salesman(List<Product> products)
        {
            _products = products;
        }

        public void AddProducts()
        {
            _products.Add(new Product("Меч", 100));
            _products.Add(new Product("Щит", 200));
            _products.Add(new Product("Лук", 400));
            _products.Add(new Product("Паприка", 30));
        }

        public void DisplayProducts()
        {
            Console.WriteLine($"{CashRegister} - Касса");
            for (int i = 0; i < _products.Count; i++)
            {
                _products[i].DisplayProduct();
            }
        }

        public Product GiveProduct()
        {
            Console.WriteLine("Введите ID продукта");
            string userId = Console.ReadLine();

            if (int.TryParse(userId, out int numberUser))
            {
                for (int i = 0; i < _products.Count; i++)
                {
                    if (numberUser == _products[i].Id)
                    {
                        return _products[i];
                    }
                }
            }
            else
            {
                Console.WriteLine("Продукт не найден");
            }
            return null;    
        }

        public void Remov(Product product)
        {
            _products.Remove(product);
        }
    }

    class Player : Deal
    {
       private List<Product> _purchasedProducts = new List<Product>();
       
       public void BuyProduct(Product byProduct)
       {
          _purchasedProducts.Add(byProduct);
       }

        public void WithdrawPurchases()
        {
            Console.WriteLine($"{Money} - Игрок");
            for (int i = 0;i < _purchasedProducts.Count; i++)
            {
                _purchasedProducts[i].DisplayProduct();
            }
        }
    }
}
