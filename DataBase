using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace GameConsoles1
{
    internal class Program
    {
        static void Main()
        {
            DataBase dataBase = new DataBase();
            dataBase.AddPlayer(0,"Admin",0);
            dataBase.ShowInfo();
        }
    }

    class Player 
    {
        private int _id;
        private string _name;
        private int _level;
        private bool _active;

        public Player(int id, string name, int level, bool active = true)
        {
            _id = id;
            _name = name;
            _level = level;
            _active = active;
        }
    }

    class DataBase
    {
        private List<int> _id = new List<int>();
        private List<string> _name = new List<string>();
        private List<int> _level = new List<int>();
        private List<bool> _active = new List<bool>();

        public void AddPlayer(int id, string name, int level, bool active = true)
        {
            _id.Add(id);
            _name.Add(name);
            _level.Add(level);
            _active.Add(active);
        }

        public void ShowInfo()
        {
            for (int i = 0; i < _id.Count; i++)
            {
                Console.WriteLine($"Имя игрока:{_name[i]}, Уровень игрока:{_level[i]},Статус игрока:{_active[i]}");
            }
        }
    }
}
