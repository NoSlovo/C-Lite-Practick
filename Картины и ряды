using System;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Csharp_Lite
{
    class Program
    {
        static void Main(string[] args)
        {
            int cards = 52;
            int cardsRow = 3;

            int allRows = cards  / cardsRow;

            int remainder = cards - (allRows * cardsRow);

            Console.WriteLine($"Всего рядов {allRows}, остаток {remainder}");
        }
    }
}
