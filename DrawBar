using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace GameConsoles1
{
    internal class Program
    {
        static void Main()
        {
            int hp = 5;
            int maxHp = 10;
            int mana = 3;
            int maxMana = 20;

            DrawBar(hp, maxHp, ConsoleColor.Red, 1, 50);
            DrawBar(mana, maxMana, ConsoleColor.Blue, 2,50);
        }

        static void DrawBar(int value, int maxValue, ConsoleColor color, int position, int percent)
        {
            ConsoleColor defaultColor = Console.BackgroundColor;
            string bar = " ";
            Console.WriteLine(percent);
            if (value == 0 )
            {
                int maxPersent = 100;
                for (int i = 0; i <= percent; i++)
                {
                    bar += '#';
                }
            }
            else
            {
                for (int i = 0; i <= value; i++)
                {
                    bar += '#';
                }
            }
            

            Console.SetCursorPosition(0, position);
            Console.Write("[");
            Console.BackgroundColor = color;
            Console.Write(bar);
            Console.BackgroundColor = defaultColor;

            bar = "";

            if (maxValue == 0)
            {
                int maxPersent = 100;
                for (int i = percent; i < maxPersent; i++)
                {
                    bar += ' ';
                }
                
            }
            else
            {
                for (int i = value; i < maxValue; i++)
                {
                    bar += ' ';
                }
            }
            Console.Write(bar + "]");
        }
    }
}
