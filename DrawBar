using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace GameConsoles1
{
    internal class Program
    {
        static void Main()
        {
            float heal = 40;
            float maxHeal = 100;
            float mana = 100;
            float maxMana = 100;
            DrawBar(heal, maxHeal,1,ConsoleColor.Red);
            DrawBar(mana, maxMana,2, ConsoleColor.Blue);
        }

        static void DrawBar(float value, float maxValue,int position, ConsoleColor color)
        {
            if (value <= maxValue && value >= 0 && maxValue >= value)
            {
                float maxPercent = 100;
                int minPercent = Convert.ToInt32(value / maxValue * maxPercent);
                ConsoleColor defaultColor = Console.BackgroundColor;

                string bar = " ";

                for (int i = 0; i < minPercent; i++)
                {
                    bar +='$';
                }

                Console.SetCursorPosition(0, position);
                Console.Write("[");
                Console.BackgroundColor = color;
                Console.Write(bar);
                Console.BackgroundColor = defaultColor;

                bar =" ";

                for (int i = minPercent; i < maxPercent; i++)
                {
                    bar +=" ";
                }

                Console.Write(bar+"]");
            }
            else 
            {
                Console.WriteLine("Ошибка данных");
            }

        }
    }
}
