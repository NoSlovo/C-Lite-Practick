using System;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace Csharp_Lite
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Сколько раз вывести сообщение");
            int amountIterations = Convert.ToInt32(Console.ReadLine());
            Console.WriteLine("Какое сообщение?");
            string userMessage = Console.ReadLine();
            Console.Clear();
            for (int i = 0; i <= amountIterations; i++)
            {
                Console.WriteLine(userMessage);
            }
        }
    }
}
