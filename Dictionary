using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace GameConsoles1
{
    internal class Program
    {
        static void Main()
        {
            Dictionary<string, string> dossier = new Dictionary<string, string>();
            dossier.Add("Виктор Павлов Блаженный", "Программист");
            dossier.Add("Константин Прокофьев Владеленович", "Левел Дизанейр");
            dossier.Add("Виктор Остапов Бодрячковый", "Сценарист");

            while (true)
            {
                Console.WriteLine("1- Добавить досье\n2- Удалить досье\n3- Вывести досье");
                string userInput = Console.ReadLine();
                switch (userInput)
                {
                    case "1":
                        Console.Clear();
                        AddDossier(dossier);
                        break;
                    case "2":
                        Console.Clear();
                        DeleteDossier(dossier);
                        break;
                    case "3":
                        Console.Clear();
                        DisplayDossier(dossier);
                        break;
                }

            }
        }

        static void AddDossier(Dictionary<string, string> dossier)
        {
            Console.WriteLine("Введите должность");
            string value = Console.ReadLine();
            Console.WriteLine("Введите данные роботника");
            string worker = Console.ReadLine();

            dossier.Add(worker,value);
            Console.WriteLine("Добавлен");
        }

        static void DeleteDossier(Dictionary<string, string> dossier)
        {
            Console.WriteLine("Введите ФИО на удаление");
            string dossierKey = Console.ReadLine();
            if (dossier.ContainsKey(dossierKey))
            {
                dossier.Remove(dossierKey);
                Console.WriteLine("Удалено");
            }
            else
            {
                Console.WriteLine("Такой должности нет ");
            }
        }

        static void DisplayDossier(Dictionary<string, string> dossier)
        {
            foreach (var item in dossier)
            {
                Console.WriteLine($"{item.Key} - {item.Value}");
            }
        }
    }
}
